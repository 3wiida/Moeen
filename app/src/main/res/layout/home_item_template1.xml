<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8dp"
    app:cardElevation="@dimen/_5dp"
    app:cardCornerRadius="@dimen/_20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="@dimen/_10dp"
        android:orientation="vertical"
        android:gravity="center">


        <ImageView
            android:id="@+id/ivHomeItem1"
            android:layout_width="@dimen/_63dp"
            android:layout_height="@dimen/_63dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/_5dp"
            app:srcCompat="@drawable/ambulance" />

        <TextView
            android:id="@+id/tvHomeItem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/home_item_color1"
            android:textSize="@dimen/_12sp"
            android:fontFamily="@font/cairo_bold"
            android:text="@string/ambulance" />

    </LinearLayout>

</androidx.cardview.widget.CardView>